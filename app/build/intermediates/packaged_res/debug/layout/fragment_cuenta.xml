<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CuentaFragment">

    <!-- Configuración de cuenta -->
    <TextView
        android:id="@+id/tvAccountSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración de Cuenta"
        android:textSize="23sp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Opción para editar información -->
    <TextView
        android:id="@+id/tvEditInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Información"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/tvAccountSettings"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="8dp"
        android:layout_marginTop="36dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <!-- Opción para cambiar contraseña -->
    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Contraseña"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/tvEditInfo"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <!-- Opción para mostrar información de la aplicación -->
    <TextView
        android:id="@+id/tvAppInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/tvChangePassword"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="8dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <!-- Texto "Notificaciones" y Switch Material -->
    <TextView
        android:id="@+id/tvNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/tvAppInfo"
        android:drawableStart="@drawable/ic_notifications"
        android:drawablePadding="8dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchNotifications"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppInfo"
        android:layout_toEndOf="@id/tvNotifications"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="208dp" />

    <!-- Texto "Mensajes por Email" y Switch Material -->
    <TextView
        android:id="@+id/tvEmailMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensajes por Email"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/switchNotifications"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEmailMessages"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchNotifications"
        android:layout_toEndOf="@id/tvEmailMessages"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="173dp"
        android:textSize="16sp" />

    <!-- Opción para cerrar sesión -->
    <TextView
        android:id="@+id/tvSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:fontFamily="@font/cabin"
        android:layout_below="@id/tvEmailMessages"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnInformacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presióname"
        android:layout_below="@id/tvAppInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        style="@style/Widget.Material3.Button" />

    <ImageView
        android:id="@+id/imgCanchita"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        android:src="@drawable/comidacine" />

</RelativeLayout>